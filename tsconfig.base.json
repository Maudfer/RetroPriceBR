{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@retroprice/shared": [
        "packages/shared/src/index.ts"
      ],
      "@retroprice/shared/*": [
        "packages/shared/src/*"
      ],
      "@retroprice/core": [
        "packages/core/src/index.ts"
      ],
      "@retroprice/core/*": [
        "packages/core/src/*"
      ],
      "@retroprice/db": [
        "packages/db/src/index.ts"
      ],
      "@retroprice/db/*": [
        "packages/db/src/*"
      ]
    }
  }
}